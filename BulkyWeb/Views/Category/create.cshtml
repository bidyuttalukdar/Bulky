@model Category

<p>Create a new category</p>
<form method="post">
    <div class="border p-4 mt-4">
        <div class="row mb-3 p-3">
            <label class="p-0">Category Name</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0">Display Order</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row p-3">
            <div class="col-6">
                <button type="submit" class="btn btn-primary w-100" style="width:150px">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary w-100" style="">Back to List</a>
            </div>
        </div>
    </div>
</form>