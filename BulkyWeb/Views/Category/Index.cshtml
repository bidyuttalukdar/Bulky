@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6 text-primary">
            <h3> Category </h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>
    <table class="table table-border table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>NAME</td>
                <td>DISPLAY ORDER</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var ob in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@ob.Id</td>
                    <td>@ob.Name</td>
                    <td>@ob.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>

</div>

