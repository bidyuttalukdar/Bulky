@model ProductVM

<p>@(Model.Product.Id == 0 ? "Create" : "Update") product</p>
<form method="post" class="row" enctype="multipart/form-data">
    <div class="border p-4 m-4">
        <input asp-for="@Model.Product.Id" hidden/>
        <div asp-validation-summary="All">
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.Title"></label>
            <input type="text" asp-for="@Model.Product.Title" class="form-control" />
            <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.Description"></label>
            <input type="text" asp-for="@Model.Product.Description" class="form-control" />
            <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.ISBN"></label>
            <input type="text" asp-for="@Model.Product.ISBN" class="form-control" />
            <span asp-validation-for="@Model.Product.ISBN" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.Author"></label>
            <input type="text" asp-for="@Model.Product.Author" class="form-control" />
            <span asp-validation-for="@Model.Product.Author" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.ListPrice"></label>
            <input asp-for="@Model.Product.ListPrice" class="form-control" />
            <span asp-validation-for="@Model.Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.Price"></label>
            <input asp-for="@Model.Product.Price" class="form-control" />
            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.Price50"></label>
            <input asp-for="@Model.Product.Price50" class="form-control" />
            <span asp-validation-for="@Model.Product.Price50" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.Price100"></label>
            <input asp-for="@Model.Product.Price100" class="form-control" />
            <span asp-validation-for="@Model.Product.Price100" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.CategoryId"></label>
            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--select--</option>
            </select>
            <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-3">
            <label class="p-0" asp-for="@Model.Product.ImageURL"></label>
            <input type="file" asp-for="@Model.Product.ImageURL" class="form-control" />
        </div>
        <div class="row p-3">
            <div class="col-6">
                <button type="submit" class="btn btn-primary w-100" style="width:150px">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary w-100" style="">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}